---
import NavClock from './NavClock.svelte';
import HomeIcon from '../icons/IconamoonSignDivisionSlashLight.svelte';
import DesignIcon from '../icons/IconoirDesignNib.svelte';
import BlogIcon from '../icons/HugeiconsQuillWrite01.svelte';
import NavLink from './NavLink.astro';
---

<nav>
	<div
		class="fixed bottom-0 left-0 z-50 flex h-12 w-full items-center justify-center gap-x-0.5 border-t-[1.25px]
			border-zinc-200 bg-white px-4 leading-none tracking-tighter md:sticky md:top-0 md:h-15
			md:justify-between md:border-b-[1.25px]"
	>
		<div class="hidden w-full md:flex">
			<NavClock client:load />
		</div>
		<div class="flex h-12 items-center justify-center">
			<NavLink href="/" ariaLabel="Home" dataText="Home"
				><HomeIcon className="size-6 md:size-5" />
			</NavLink>
			<NavLink href="/design" ariaLabel="Design" dataText="Design"
				><DesignIcon className="size-6 md:size-5" />
			</NavLink>
			<NavLink href="/blog" ariaLabel="Blog" dataText="Blog"
				><BlogIcon className="size-6 md:size-5" />
			</NavLink>
		</div>
		<div class="hidden w-full md:flex"></div>
	</div>
</nav>
