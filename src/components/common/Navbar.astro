---
import NavClock from './NavClock.svelte';
import HomeIcon from '../icons/IconamoonSignDivisionSlashLight.svelte';
import DesignIcon from '../icons/IconoirDesignNib.svelte';
import WritingIcon from '../icons/HugeiconsQuillWrite01.svelte';
import { cn } from '../../utils/cn';

const currentPath = Astro.url.pathname;

const linkClass: string =
	'nav-button relative flex items-center justify-center gap-x-2 rounded-md border border-transparent px-2.5 py-2.5 text-sm leading-none tracking-tight text-zinc-500 hover:border-zinc-200/50 hover:bg-zinc-100/80 hover:text-black md:text-base';
---

<nav>
	<div
		class="fixed bottom-0 left-0 z-50 flex h-12 w-full items-center justify-center gap-x-0.5 border-t-[1.25px]
			border-zinc-200 bg-white px-4 leading-none tracking-tighter md:sticky md:top-0 md:h-15
			md:justify-between md:border-b-[1.25px]"
	>
		<div class="hidden w-full md:flex">
			<NavClock client:load />
		</div>
		<div class="flex h-12 items-center justify-center">
			<a
				href="/"
				aria-label="Home"
				data-text="Home"
				class={cn(linkClass, currentPath === '/' ? 'text-black' : '')}
				data-astro-prefetch><HomeIcon className="size-6 md:size-5" /></a
			>
			<a
				href="/design"
				aria-label="Design"
				data-text="Design"
				class={cn(linkClass, currentPath === '/design' ? 'text-black' : '')}
				data-astro-prefetch><DesignIcon className="size-6 md:size-5" /></a
			>
			<a
				href="/blog"
				aria-label="Blog"
				data-text="Blog"
				class={cn(linkClass, currentPath === '/blog' ? 'text-black' : '')}
				data-astro-prefetch><WritingIcon className="size-6 md:size-5" /></a
			>
		</div>
		<div class="hidden w-full md:flex"></div>
	</div>
</nav>

<style>
	.nav-button::before {
		display: none;
		content: attr(data-text);
		position: absolute;
		transform: translateY(-50%);
		top: 110%;
		animation: scale-in 0.2s forwards;

		font-size: 0.875rem;
		padding: 0.5rem 0.6rem 0.5rem 0.5rem;
		background-color: var(--color-zinc-50);
		border: 0.5px solid var(--color-zinc-200);
		border-radius: 0.25rem;
	}

	.nav-button:hover::before {
		display: block;
	}

	@keyframes scale-in {
		0% {
			opacity: 0;
			transform: rotateX(-10deg) scale(0.9);
		}
		100% {
			opacity: 1;
			transform: rotateX(0deg) scale(1);
		}
	}
</style>
