---
import NavLink from './NavLink.svelte';
---

<nav>
	<div class="navbar border-t-[1.25px] border-zinc-200 bg-white md:border-b-[1.25px]">
		<div
			class="flex h-12 max-w-[1440px] items-center justify-center px-4 leading-none tracking-tighter md:mx-auto
				md:h-15"
		>
			<NavLink client:idle />
		</div>
	</div>
</nav>

<style>
	.navbar {
		position: fixed;
		left: 0;
		right: 0;
		bottom: 0;
		width: 100%;
		height: calc(3rem + env(safe-area-inset-bottom));
		padding-bottom: env(safe-area-inset-bottom);
		z-index: 50;

		@media (min-width: 48rem) {
			position: sticky;
			top: 0;
			height: 3.75rem;
		}
	}
</style>
