---
import DesignMain from '../design/DesignMain.svelte';
import ShuffleButton from '../design/ShuffleButton.svelte';
---

<main class="flex flex-col gap-y-20 pt-15 pb-10 md:pt-20">
	<section
		id="identity"
		class="main-font mx-auto w-full max-w-[600px] flex-col px-6 tracking-tight md:px-0"
	>
		<h1 class="text-lg leading-none font-bold text-zinc-700">Faris Saifuddin Wafiq</h1>
		<p class="pt-0.5 text-lg leading-none font-medium text-zinc-500">Frontend Developer</p>
	</section>
	<section id="projects px-6 md:px-0"></section>
	<section id="playground" class="flex flex-col">
		<div class="mx-auto flex w-full max-w-[600px] items-center justify-between px-6 md:px-0">
			<h1 class="main-font text-lg leading-none font-semibold tracking-tight text-zinc-700">
				Playground
			</h1>
			<ShuffleButton client:load class="main-font" />
		</div>
		<DesignMain client:load />
	</section>
</main>

<style>
	.main-font {
		font-family: 'Inter Display', 'Inter', sans-serif;
		font-feature-settings: 'cv06', 'cv11';
	}
</style>
